---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { loadSnippets } from "../../lib/csv";
import type { Snippet } from "../../lib/csv";

export const getStaticPaths = () => {
  const snippets = loadSnippets();
  return snippets.map((snippet) => ({
    params: { slug: snippet.slug },
    props: { snippet, snippets },
  }));
};

const { snippet, snippets } = Astro.props as { snippet: Snippet; snippets: Snippet[] };
const related = snippets
  .filter((item) => item.category === snippet.category && item.slug !== snippet.slug)
  .slice(0, 3);

const withBase = (path: string) => `${import.meta.env.BASE_URL}${path.replace(/^\//, "")}`;
